<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="sw-menu">
        <field name="custom_url">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">150</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Custom Url</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="notice" xsi:type="string" translate="true"><![CDATA[Enter hash (#) to make this category not clickable. To create a custom link (which will replace category link), enter custom URL path. Path will be appended two major's base URL two create a new link. Leave this field empty if no changes are needed.]]></item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>